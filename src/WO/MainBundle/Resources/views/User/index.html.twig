{% extends 'WOMainBundle::admin.html.twig' %}

{% block body -%}
    <h1>User list</h1>

    <table class="records_list ui striped table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Benutzername</th>
                <th>Email</th>
                <th>Vorname</th>
                <th>Nachname</th>
                <th>Stra√üe</th>
                <th>PLZ</th>
                <th>Stadt</th>
                <th>Registrierdatum</th>
                <th>letzter Login</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_user_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.firstname }}</td>
                <td>{{ entity.lastname }}</td>
                <td>{{ entity.street }}</td>
                <td>{{ entity.zip }}</td>
                <td>{{ entity.city }}</td>
                <td>{% if entity.createDate %}{{ entity.createDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.lastLogin %}{{ entity.lastLogin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_user_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_user_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_user_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
