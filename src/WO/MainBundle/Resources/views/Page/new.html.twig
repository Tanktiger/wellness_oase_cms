{% extends 'WOMainBundle::admin.html.twig' %}

{% block body -%}
    <h1>Page creation</h1>

    {#{{ form(form) }}#}

    {{ form_start(form, { 'attr': { 'class': 'ui form' } }) }}
    {{ form_errors(form) }}
        <div class="field">
            {{ form_label(form.title) }}
            {{ form_widget(form.title) }}
        </div>
        <div class="field">
            {{ form_label(form.slug) }}
            {{ form_widget(form.slug) }}
        </div>
        <div class="field">
            {{ form_label(form.content) }}
            {{ form_widget(form.content) }}
        </div>
        <div class="field">
            {{ form_label(form.type) }}
            {{ form_widget(form.type) }}
        </div>
        <div class="field">
            {{ form_label(form.published) }}
            {{ form_widget(form.published) }}
        </div>
        <div class="field">
            {{ form_label(form.parent) }}
            {{ form_widget(form.parent) }}
        </div>
        <div class="field">
            {{ form_widget(form.submit, { 'attr': {'class': 'ui submit button'},
                                            'label': 'Seite speichern'}) }}
        </div>
    {{ form_end(form) }}


    <ul class="record_actions">
        <li>
            <a href="{{ path('admin_page') }}">
                Back to the list
            </a>
        </li>
    </ul>
{% endblock %}
