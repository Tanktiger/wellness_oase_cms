{% extends 'WOMainBundle::admin.html.twig' %}

{% block body -%}
    <h1>Sonderangebots Liste</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Anwendung</th>
                <th>Anfang</th>
                <th>Ende</th>
                <th>Preis</th>
                <th>Erstellt am</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.service }}</td>
                <td>{% if entity.offerStart %}{{ entity.offerStart|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.offerEnd %}{{ entity.offerEnd|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.offerPrice }}</td>
                <td>{% if entity.createDate %}{{ entity.createDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_offer_show', { 'id': entity.id }) }}">zeigen</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_offer_edit', { 'id': entity.id }) }}">editieren</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_offer_new') }}">
                Neues Sonderangebot einstellen
            </a>
        </li>
    </ul>
    {% endblock %}
