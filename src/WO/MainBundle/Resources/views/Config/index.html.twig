{% extends 'WOMainBundle::admin.html.twig' %}
{#{% form_theme edit_form 'WOOrganizerBundle:Form:fields.html.twig' %}#}
{% block title %}Seitenkonfiguration{% endblock %}

{% block body -%}
    <h1>Config list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Offline</th>
                <th>Layout</th>
                <th>EOP</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_config_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                {% if entity.offline %}
                    <td>JA</td>
                {% else %}
                    <td>Nein</td>
                {% endif %}
                <td>{{ entity.layout }}</td>
                {% if entity.getEventOverwriteProtection %}
                    <td>JA</td>
                {% else %}
                    <td>Nein</td>
                {% endif %}
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_config_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_config_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_config_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
