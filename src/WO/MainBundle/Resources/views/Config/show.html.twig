{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Config</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Offline</th>
                <td>{{ entity.offline }}</td>
            </tr>
            <tr>
                <th>Layout</th>
                <td>{{ entity.layout }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_config') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_config_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
