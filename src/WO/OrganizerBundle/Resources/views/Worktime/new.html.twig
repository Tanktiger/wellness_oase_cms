{% block body -%}
    {% form_theme form 'WOOrganizerBundle:Form:fields.html.twig' %}
    <div class="modal-dialog">
        <div class="modal-content">
            {#<div class="modal-header">#}
                {#<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>#}
                {#<h4 class="modal-title">Worktime creation</h4>#}

            {#</div>#}
            {{  form_start(form, {'attr': {'class': 'form'}}) }}
            <div class="modal-body">
                <div class="te">
                    {#{{ form_widget(form) }}#}
                    <div class="row">
                        <div class="col-md-12">
                            {{ form_row(form.date) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            {{ form_row(form.start) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            {{ form_row(form.end) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            {{ form_row(form.employee) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            {{ form_row(form.location) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="cols-xs-12 col-md-3">
                            {{ form_row(form.free) }}
                        </div>
                        <div class="cols-xs-12 col-md-3">
                            {{ form_row(form.vacation) }}
                        </div>
                        <div class="cols-xs-12 col-md-3">
                            {{ form_row(form.sick) }}
                        </div>
                        <div class="cols-xs-12 col-md-3">
                            {{ form_row(form.onDemand) }}
                        </div>
                    </div>
                    {{ form_rest(form) }}
                    <button type="button" class="btn btn-default" data-dismiss="modal">Abbrechen</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
        <!-- /.modal-content -->
    </div>
{% endblock %}
