{% block body -%}
    {% form_theme delete_form 'WOOrganizerBundle:Form:fields.html.twig' %}
    <div class="modal-dialog">
        <div class="modal-content">
            {{  form_start(delete_form, {'attr': {'class': 'form form-horizontal', 'id' : 'deleteForm'}}) }}
            <div class="modal-body">
                <div class="te">
                    <div class="form-group">
                        <label for="date" class="col-sm-2 control-label">Datum</label>
                        <div class="col-sm-10">
                            <span id="date">{{ entity.date|date('Y-m-d H:i:s') }}</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="date" class="col-sm-2 control-label">Arbeitszeit</label>
                        <div class="col-sm-10">
                            <span id="date">{{ entity.timerange }}</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="date" class="col-sm-2 control-label">Mitarbeiter</label>
                        <div class="col-sm-10">
                            <span id="date">{{ entity.employee }}</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-2">
                            {{ form_rest(delete_form) }}
                        </div>
                        <div class="col-sm-10">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Abbrechen</button>
                        </div>
                    </div>


                </div>
            </div>
            {{ form_end(delete_form) }}
        </div>
        <!-- /.modal-content -->
    </div>
{% endblock %}
