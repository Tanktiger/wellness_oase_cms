{% block body -%}
    {% form_theme delete_form 'WOOrganizerBundle:Form:fields.html.twig' %}
    <div class="modal-dialog">
        <div class="modal-content">
            {{  form_start(delete_form, {'attr': {'class': 'form', 'id': 'deleteForm'}}) }}
            <div class="modal-body">
                <div class="te">
                    <table class="record_properties">
                        <tbody>
                        <tr>
                            <th>Anfang</th>
                            <td>{{ entity.dateStart|date('Y-m-d H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th>Ende</th>
                            <td>{{ entity.dateEnd|date('Y-m-d H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th>Kunde</th>
                            <td>{{ entity.customer }}</td>
                        </tr>
                        <tr>
                            <th>Info</th>
                            <td>{{ entity.info }}</td>
                        </tr>
                        <tr>
                            <th>Preis</th>
                            <td>{{ entity.price }}</td>
                        </tr>
                        </tbody>
                    </table>
                    {{ form_rest(delete_form) }}
                    <button type="button" class="btn btn-default" data-dismiss="modal">Abbrechen</button>
                </div>
            </div>
            {{ form_end(delete_form) }}
        </div>
        <!-- /.modal-content -->
    </div>
{% endblock %}

